<UserControl x:Class="DesktopAppMvvm.EditWindowControls.EditColorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="395" Height="175">
    <Grid>
        <StackPanel Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock TextWrapping="Wrap" Text="{Binding PropertyName}" Foreground="Orange" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left"/>
        </StackPanel>
        <ScrollViewer Height="136" Margin="10,29,0,0" VerticalAlignment="Top">
            <WrapPanel x:Name="ColorWP" Width="375"/>

        </ScrollViewer>

    </Grid>
</UserControl>
